{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-prettier"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-order": [
      "width",
      "height"
    ],
    "prettier/prettier": true,
    "color-hex-length": "long",
    "color-no-invalid-hex": true,
    "at-rule-empty-line-before": "always",
    "selector-class-pattern": ["[a-z][A-Za-z0-9]*", {
      "message": "Kebab-case"
    }]
  }
}